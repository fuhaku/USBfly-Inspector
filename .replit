modules = ["rust"]

[nix]
channel = "stable-24_05"
packages = ["glib", "pkg-config", "xorg.libX11", "xorg.libxcb", "xorg.libXcursor", "libglvnd", "xorg.libXrandr", "xorg.libXi", "xorg.libXinerama", "xorg.libXext", "mesa"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "USBfly Rust Application"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "rust-usbfly"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "USBfly"

[[workflows.workflow]]
name = "USBfly Rust Application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && RUST_LOG=debug cargo run"

[[workflows.workflow]]
name = "rust-usbfly"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner && cargo run"

[[workflows.workflow]]
name = "USBfly"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd . && RUST_LOG=debug cargo run -- --port 5000"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "cd /home/runner/workspace && RUST_LOG=debug cargo run"]

[[ports]]
localPort = 5000
externalPort = 80
